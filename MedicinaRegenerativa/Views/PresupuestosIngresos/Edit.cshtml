@model MedicinaRegenerativa.Models.PresupuestosIngresos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery/jquery-ui.css" rel="stylesheet">
<script src="@Url.Content("~/Scripts/autocomplete.js")" type="text/javascript"></script>
@Styles.Render("~/Content/css2Select")
@section Scripts {
    @Scripts.Render("~/bundles/bootstrapDateTimePicker")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/select2")
}
@Styles.Render("~/Content/cssFechas")




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ingresos de Presupuestos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idPresupuestoIngreso)

        <div class="form-group">
            @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cuota, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cuota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cuota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control" })                
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idPresupuestos, "Presupuestos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <th>Precio</th>
                        <th>Cuotas</th>
                        <th>Paciente</th>
                        <th>Tratamiento</th>
                    </tr>
                    <tr>
                        <td><h5>@ViewBag.Presupuesto.Precio</h5></td>
                        <td><h5>@ViewBag.Presupuesto.Cuotas</h5></td>
                        <td><h5>@ViewBag.Presupuesto.Pacientes.NombreCompleto</h5></td>
                        <td><h5>@ViewBag.Presupuesto.TipoTurnos.Descripcion</h5></td>
                    </tr>
                </table>
            </div>
            @Html.DropDownList("idPresupuestos", null, htmlAttributes: new { @class = "form-control", style = "display:none;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idTipoMoneda, "idTipoMoneda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTipoMoneda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTipoMoneda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idMedioPago, "idMedioPago", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idMedioPago", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idMedioPago, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FacturaNro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FacturaNro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FacturaNro, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Details", "Presupuestos", new { id = Model.idPresupuestos }, new { @class = "btn btn-primary" })
</div>

<script type="text/javascript">
    $(document).ready(function () {
//        $("#idPresupuestos").select2();
        $("#idTipoMoneda").select2();
        $("#idMedioPago").select2();
        $("#Monto").removeAttr("data-val");
    });

</script>
